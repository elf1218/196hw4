
<h1>All Calendars</h1>
<button class="btn">Show Events</button>
<table>
    <tr class="table-header">
        <td>Title</td>
        <td>User</td>
    </tr>
    <% @calendars.each do |calendar| %>
    <tr>
        <td><%= link_to calendar.title, calendar_path(calendar.id) %></td>
        <td><%= calendar.user.email %></td>
    </tr>
    <tr class="events"><td>
        <table>
            <tr class = "table-header">
                <td>Description</td>
                <td>Time</td>
            </tr>
            <% calendar.events.each do |event| %>
                <tr>
                    <td><%=link_to event.desc, event_path(event.id) %></td>
                    <td><%= event.time %></td>
                </tr>
            <%end%>

        </table>
    </td></tr>
    <% end %>
</table>