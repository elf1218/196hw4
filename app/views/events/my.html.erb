<h1>My Events</h1>
<table>
    <tr class="table-header">
        <td>Time</td>
        <td>Description</td>
        <td>Calendar</td>
    </tr>
    <% @events.each do |event| %>
    <tr>
        <td><%= event.time %></td>
        <td><%= link_to event.desc, event_path(event.id) %></td>
        <td><%= link_to event.calendar.title, calendar_path(event.calendar.id) %></td>
        <td><%= link_to "Edit Event", edit_event_path(event.id) %> </td>
        <td><%= link_to "Delete Event", event, confirm: "Are you sure you want to do this? This deletion is not reversible.", method: :delete %></td>
    </tr>
    <% end %>
</table>