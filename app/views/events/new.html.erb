<%= form_for(@event) do |f| %>
    <div class="field">
        <p>time</p>
        <%= f.datetime_select :time%>
    </div>
    <div class="field">
        <p>description</p>
        <%= f.text_field :desc%>
    </div>
    <div class="field">
        <%= f.hidden_field :user_id, :value=>current_user.id %>
    </div>
    <div class="field">
        <p>calendar</p>
        <%= f.collection_select :calendar_id, Calendar.all, :id, :title %>
    </div>
    <div class="actions">
        <%= f.submit %>
    </div>
    <div class="error-msg"> 
        <% if @event.errors.any? %> 
            <ul> 
                <% @event.errors.full_messages.each do |msg| %> 
                <li><%= msg %></li> 
                 <% end %> 
             </ul> 
         <% end %> 
    </div> 

<% end %>